<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ContentActivity"
    tools:ignore="UselessLeaf">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:id="@+id/content_title"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Biến rác thải thành năng lượng vào năm 2024"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/content_image"
                android:src="@drawable/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/content_description"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:text="Hiện nay 15% địa phương đã biến rác thải thành năng lượng và cả nước sẽ làm được như vậy vào năm 2024, theo Bộ trưởng Tài nguyên và Môi trường Trần Hồng Hà."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/content_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:text="Hiện nay 15% địa phương đã biến rác thải thành năng lượng và cả nước sẽ làm được như vậy vào năm 2024, theo Bộ trưởng Tài nguyên và Môi trường Trần Hồng Hà."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>